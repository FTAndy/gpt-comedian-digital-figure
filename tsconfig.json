{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": false,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules", "build", "./test/**/*.spec.ts"]
}